---
import type { CollectionEntry } from "astro:content";
import { formatDate, readingTime } from "@lib/utils";

type Props = {
  entry: (CollectionEntry<"blog"> & { overview?: string; readTime?: string }) | CollectionEntry<"projects">;
}

const { entry } = Astro.props;

// Get the description/overview text
const description = entry.collection === "blog" 
  ? (entry as CollectionEntry<"blog"> & { overview?: string }).overview || ""
  : entry.data.description;

// Get date and read time for blog posts
const showMeta = entry.collection === "blog";
const date = showMeta ? formatDate(entry.data.date) : null;
const readTime = showMeta ? (entry as CollectionEntry<"blog"> & { readTime?: string }).readTime : null;

// Get topics for blog posts
const topics = entry.collection === "blog" && entry.data.topics ? entry.data.topics : null;
---

<a href={`/${entry.collection}/${entry.slug}`} class="relative group flex flex-nowrap py-3 px-4 pr-10 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out">
  <div class="flex flex-col flex-1 min-w-0">
    <div class="font-semibold truncate">
      {entry.data.title}
    </div>
    {description && (
      <div class="text-sm line-clamp-2">
        {description}
      </div>
    )}
    {topics && topics.length > 0 && (
      <div class="flex flex-wrap gap-1.5 mt-2">
        {topics.map((topic: string) => (
          <span class="px-2 py-0.5 text-xs font-medium rounded-md bg-stone-200 dark:bg-stone-700 text-black dark:text-white">
            {topic}
          </span>
        ))}
      </div>
    )}
    {showMeta && (
      <div class="text-xs opacity-75 mt-1 truncate">
        {date} Â· {readTime}
      </div>
    )}
  </div>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24"
    class="absolute top-1/2 right-2 -translate-y-1/2 size-5 stroke-2 fill-none stroke-current">
    <line x1="5" y1="12" x2="19" y2="12" class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out" />
    <polyline points="12 5 19 12 12 19" class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out" />
  </svg>
</a>
